# =====================================================
# VARIABLES D'ENVIRONNEMENT STOCK CHIC
# =====================================================

# Mode de fonctionnement
NODE_ENV=development
DEMO_MODE=false

# Configuration du serveur
PORT=3001
FRONTEND_URL=http://localhost:5173

# Configuration Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Configuration de stockage des images
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Configuration CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Configuration de la base de données (optionnel si vous utilisez Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/stockchic

# Configuration pour le déploiement
NODE_ENV=production
